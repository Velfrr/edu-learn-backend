  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "build:gateway": "nest build gateway",
    "build:analytics": "nest build analytics",
    "build:course": "nest build course",
    "build:lesson": "nest build lesson",
    "build:test": "nest build test",
    "build:feedback": "nest build feedback",
    "build:user": "nest build user",
    "build:student": "nest build student",
    "start:gateway": "nest start gateway",
    "start:analytics": "nest start analytics",
    "start:course": "nest start course",
    "start:lesson": "nest start lesson",
    "start:test": "nest start test",
    "start:feedback": "nest start feedback",
    "start:user": "nest start user",
    "start:student": "nest start student",
    "dev:gateway": "nest start gateway --watch",
    "dev:analytics": "nest start analytics --watch",
    "dev:course": "nest start course --watch",
    "dev:lesson": "nest start lesson --watch",
    "dev:test": "nest start test --watch",
    "dev:feedback": "nest start feedback --watch",
    "dev:user": "nest start user --watch",
    "dev:student": "nest start student --watch",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "typeorm-ds": "npm run typeorm -- --dataSource ./libs/database/src/data-source.ts",
    "migration:create": "npm run typeorm migration:create",
    "migration:generate": "npm run typeorm-ds migration:generate",
    "migration:run": "npm run typeorm-ds migration:run",
    "migration:revert": "npm run typeorm-ds migration:revert",
    "migration:show": "npm run typeorm-ds migration:show",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/edu-learn-backend/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.7",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@shared/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@shared/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@shared/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    }
  }
}
